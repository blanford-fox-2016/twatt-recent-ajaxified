<!DOCTYPE html>
<html>
<head>
    <% include head.ejs %>
</head>
<body>

<% include top_menu.ejs %>

<div class="container text-center form-search">
    <h1><%= title %></h1>
    <div>
        <form class="navbar-form" action="/search" method="get">
            <div class="input-group add-on">
                <input type="text" class="form-control" placeholder="Search Keyword" name="q">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>



<div class="container ">
    <% for (var i = 0; i < search.statuses.length; i++) { %>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4><%= search.statuses[i].user.name%></h4>
        </div>

        <div class="panel-body">
            <%= search.statuses[i].text%>
        </div>
    </div>


    <% } %>
</div>


<% include scripts.ejs %>
</body>
</html>
